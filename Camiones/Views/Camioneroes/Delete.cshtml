@model Camiones.Models.Camionero

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="display-5 mt-5 mb-4">Borrar Registro</h1>

    <h3>¿Estás seguro de que quieres eliminar esto?</h3>
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Camionero</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Nombre</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
                <dt class="col-sm-2">Apellido Paterno</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ApellidoPaterno)</dd>
                <dt class="col-sm-2">Apellido Materno</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ApellidoMaterno)</dd>
                <dt class="col-sm-2">Edad</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Edad)</dd>
                <dt class="col-sm-2">Fecha de Nacimiento</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaNacimiento)</dd>
                <dt class="col-sm-2">Género</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Genero)</dd>
                <dt class="col-sm-2">Estado Civil</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.EstadoCivil)</dd>
                <dt class="col-sm-2">Número de Hijos</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NumeroHijos)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </form>
</div>
